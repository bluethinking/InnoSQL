+/**********************************************************************//**
+Check whether migration operation possible */ 
+static
+ibool
+fc_LRU_flash_cache_avaliable(
+/*=========================*/
+)
+{
+	ut_ad(mutex_own(&fc->mutex));
+
+	if ( fc->write_round == fc->flush_round ){
+		return TRUE;
+	}
+	else{
+		if ( fc->write_off + 1 < fc->flush_off ) {
+			return TRUE;
+		}
+	}
+	return FALSE;
+}
